<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:milestone1"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        d:DataContext="{d:DesignInstance Type=local:MyFlightGearModel}" x:Class="milestone1.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800"
        Background="Black"
    >
    <Grid>
        <local:FlightDataWindow />
        <Button
            x:Name="BrowseButton"
            Width="100"
            Height="50"
            Margin="50,25,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFAEDBE9"
            Click="BrowseButton_Click"
            Content="Open"
            FontFamily="Calibri"
            FontSize="20"
            FontWeight="Bold" 
            Foreground="#FFF8F7F7"
            RenderTransformOrigin="1.047,0.821"
            Style="{StaticResource roundButton}" />

        <TextBox
            x:Name="FileNameTextBox"
            Width="300"
            Height="50"
            Margin="165,25,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontFamily="Calibri"
            FontStyle="Normal"
            FontWeight="Normal"
            Text="file path"
            TextAlignment="Left"
            TextDecorations="{x:Null}"
            TextWrapping="Wrap" />

        <Slider
            x:Name="slider"
            Width="690"
            Margin="55,450,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            d:DataContext="{d:DesignInstance Type=local:FlightGearViewModel}"
            FontSize="50"
            Foreground="#FF72B8BF"
            Maximum="100"
            Minimum="0"
            ValueChanged="slider_ValueChanged"
            Value="{Binding VM_SliderValue}" />

        <Button
            x:Name="play"
            Width="50"
            Height="50"
            Margin="55,485,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFAEDBE9"
            Click="play_Click"
            FontFamily="Verdana"
            Style="{StaticResource roundButton}">
            <Image Source="play.jpg" />
        </Button>

        <Button
            x:Name="stop"
            Width="50"
            Height="50"
            Margin="115,485,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFAEDBE9"
            Click="stop_Click"
            FontFamily="Verdana"
            Style="{StaticResource roundButton}">
            <Image Source="stop.jpg" />

        </Button>

        <Button
            x:Name="goToStart"
            Width="50"
            Height="50"
            Margin="255,485,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFAEDBE9"
            Click="goToStart_Click"
            FontFamily="Verdana"
            Style="{StaticResource roundButton}">
            <Image Source="goStart.jpg" />
        </Button>

        <Button
            x:Name="goLeft"
            Width="50"
            Height="50"
            Margin="315,485,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFAEDBE9"
            Click="goLeft_Click"
            FontFamily="Verdana"
            Style="{StaticResource roundButton}">
            <Image Source="goLeft.jpg" />
        </Button>

        <Button
            x:Name="pause"
            Width="50"
            Height="50"
            Margin="375,485,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFAEDBE9"
            Click="pause_Click"
            FontFamily="Verdana"
            Style="{StaticResource roundButton}">
            <Image Source="pause.jpg" />
        </Button>

        <Button
            x:Name="goRight"
            Width="50"
            Height="50"
            Margin="435,485,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFAEDBE9"
            Click="goRight_Click"
            FontFamily="Verdana"
            Style="{StaticResource roundButton}">
            <Image Source="goRight.jpg"/>
        </Button>

        <Button
            x:Name="goToEnd"
            Width="50"
            Height="50"
            Margin="495,485,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFAEDBE9"
            Click="goToEnd_Click"
            FontFamily="Verdana"
            Style="{StaticResource roundButton}">
            <Image Source="goEnd.jpg" />
        </Button>
        <Button
            Width="242"
            Height="292"
            Margin="49,110,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Button" />
        <Button
            Width="111"
            Height="101"
            Margin="309,115,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Button" />
        <Button
            Width="111"
            Height="101"
            Margin="308,111,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Button" />
        <Button
            Width="117"
            Height="102"
            Margin="440,112,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Button" />
        <Button
            Width="246"
            Height="168"
            Margin="312,234,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Button" />
        <Button
            Width="246"
            Height="168"
            Margin="312,234,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Button" />
        <Button
            Width="130"
            Height="128"
            Margin="611,34,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="joystick" />

        <Button
            Width="124"
            Height="195"
            Margin="616,208,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="yaw\raw\pitch" Click="Button_Click" />
        <Slider d:DataContext="{d:DesignInstance Type={x:Type local:FlightGearViewModel}}" x:Name = "speedSlider"
                    Minimum = "0"
                    Maximum = "5"            
                    Value = "{Binding VM_SimulatorSpeed, Mode=TwoWay, UpdateSourceTrigger=Default}"
                    VerticalContentAlignment="Top" 
                Margin="564,527,32,0" 
                RenderTransformOrigin="0.538,0.696" 
                ValueChanged="SimulatorSpeed_ValueChanged" 
                VerticalAlignment="Top"
        />
        <TextBox Name ="SimulatorSpeed"
                Margin="674,486,46,0"
                 
                 VerticalAlignment="Top"
                Foreground="Black" Background="White" 
                FontSize="12" TextAlignment="Center"
                 Height="30" RenderTransformOrigin="0.461,0.626" 
                 TextChanged="SimulatorSpeed_TextChanged"/>
        <Button x:Name="LabelplaySpeed" 
               Content="Play speed" 
               Margin="562,485,135,45"
               FontSize="12" 
               Width="85"
               Height="40"
               Background="#FFAEDBE9"
               RenderTransformOrigin="0.506,0.522" 
               
            VerticalAlignment="Top"
            FontFamily="Calibri"
            FontWeight="Bold"
                   Style="{StaticResource roundButton}"
            Foreground="#FFFAF4F4" Click="LabelplaySpeed_Click"/>
    </Grid>

</Window>
